
<p>
  <%= link_to 'New Recipe', new_recipe_path, class: "btn btn-primary" %>
</p>

<h1>Listing Recipes</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Cooking time</th>
      <th>Difficulty level</th>
      <th>Food type</th>
      <th>Food preference</th>
      <th>Cuisine</th>
      <th>Ingredients</th>
      <th>Procedure</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= link_to recipe.title, recipe %></td>
        <td><%= recipe.cooking_time %></td>
        <td><%= recipe.difficulty_level %></td>
        <td><%= recipe.food_preference.name %></td>
        <td><%= recipe.food_type.name %></td>
        <td><%= recipe.cuisine.name %></td>
        <td><%= recipe.ingredients %></td>
        <td><%= recipe.procedure %></td>        
        <% if user_signed_in? %>
          <td>
            <%= link_to 'Edit', edit_recipe_path(recipe), :class=> "label label-warning"  %>
          </td>
          <td>
            <%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' }, :class=> "label label-danger" %>
          </td>
        <% end %>  
      </tr>
    <% end %>
  </tbody>
</table>